<UserControl x:Class="VideoTools.Views.VideoSplitToolView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VideoTools.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid>
            <Button Content="Browse" HorizontalAlignment="Left" Margin="25,10,0,0" VerticalAlignment="Top" Tag="tbFile" />
            <TextBox x:Name="tbFile" Margin="25,35,25,0" TextWrapping="NoWrap" Text="File" VerticalAlignment="Top" />

            <Button Content="Browse" HorizontalAlignment="Left" Margin="25,73,0,0" VerticalAlignment="Top" Tag="tbFile"  />
            <TextBox x:Name="tbTargetFile" Margin="25,95,25,0" TextWrapping="NoWrap" Text="Target File" VerticalAlignment="Top" />

            <Label Content="Start time" Margin="25,155,250,0" VerticalAlignment="Top"></Label>
            <TextBox x:Name="tbStartTime" Margin="25,175,250,0" TextWrapping="NoWrap" Text="{Binding startTime, Mode=TwoWay}" VerticalAlignment="Top" />
            <Label Content="Stop time" Margin="250,155,25,0" VerticalAlignment="Top"></Label>
            <TextBox x:Name="tbStopTime" Margin="250,175,25,0" TextWrapping="NoWrap" Text="{Binding stopTime, Mode=TwoWay}" VerticalAlignment="Top" />
            <Button Content="Split" Margin="25,195,300,0" VerticalAlignment="Top" />
            <!--<MediaElement x:Name="Playback" LoadedBehavior="Manual" UnloadedBehavior="Manual" Margin="25,220,25,0" Height="136" VerticalAlignment="Top" MediaOpened="Playback_MediaOpened"/>
    <Slider x:Name="playbackSlider" HorizontalAlignment="Center" Margin="25,386,25,0" VerticalAlignment="Top" Width="341" ValueChanged="playbackSlider_ValueChanged"/>-->


        </Grid>
    </Grid>
</UserControl>
