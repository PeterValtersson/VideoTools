<Window x:Class="VideoTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VideoTools"
        xmlns:viewmodels="clr-namespace:VideoTools.ViewModels"
        xmlns:views="clr-namespace:VideoTools.Views"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Icon="/Resources/Icon1.ico"
        Title="{Binding Title}" Height="450" Width="800" Closing="Window_Closing" Loaded="Window_Loaded">

    <Window.Resources>
        <Style x:Key="BorderStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="#FFD4D4D4"></Setter>
            <Setter Property="BorderThickness" Value="1"></Setter>
            <Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
            <Setter Property="CornerRadius" Value="5"></Setter>
            <Setter Property="Background" Value="White"></Setter>
            <Setter Property="Margin" Value="0"></Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Direction="-45" BlurRadius="1" ShadowDepth="1"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Direction="-45" BlurRadius="2" ShadowDepth="2"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="BorderHover" TargetType="Border">
        </Style>
    </Window.Resources>
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <GridSplitter Grid.Column="1" Width="2" HorizontalAlignment="Stretch"/>

        <Grid/>
        <ListBox ItemsSource="{Binding videoToolTasks}" HorizontalContentAlignment="Stretch" Padding="0,0,0,0">
            <ListBox.ItemContainerStyle>
                <Style TargetType="{x:Type ListBoxItem}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type ListBoxItem}">
                                <ContentPresenter/>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Margin" Value="2,4,4,0" />
                </Style>
            </ListBox.ItemContainerStyle>
            <d:ListBox.ItemsSource>
                <x:Array Type="{x:Type viewmodels:VideoToolTask}">
                    <viewmodels:VideoToolTask Name="Task 1" Status="Running" Type="Download" KeepTracked="True"></viewmodels:VideoToolTask>
                    <viewmodels:VideoToolTask Name="Task 2" Status="Running" Type="Download" KeepTracked="False"></viewmodels:VideoToolTask>
                    <viewmodels:VideoToolTask Name="Task 3" Status="Starting" Type="Split"></viewmodels:VideoToolTask>
                </x:Array>
            </d:ListBox.ItemsSource>
            <ListBox.ItemTemplate>
                <DataTemplate DataType="{x:Type viewmodels:VideoToolTask}">
                    <Border Style="{StaticResource BorderHover}">
                        <Border Style="{StaticResource BorderStyle}" >
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Label Content="{Binding Name}" Margin="0,0,0,0" HorizontalAlignment="Center" ></Label>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Center">
                                    <Label Content="{Binding Status}"></Label>
                                    <Button Content="Remove" Command="{Binding RemoveCommand}" Margin="2" Padding="4,0,4,0"/>
                                    <Button Content="Start" Command="{Binding StartCommand}" Margin="2" Padding="4,0,4,0"/>
                                    <Button Content="Stop" Command="{Binding StopCommand}" Margin="2" Padding="4,0,4,0"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right" Visibility="{Binding Visibility}">
                                    <Label Content="Keep tracked" VerticalAlignment="Center"></Label>
                                    <CheckBox IsChecked="{Binding KeepTracked}" Margin="0" Padding="0" VerticalAlignment="Center"></CheckBox>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <TabControl Grid.Column="2" ItemsSource="{Binding tabItems}" DataContextChanged="TabControl_DataContextChanged">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Header}"></TextBlock>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabControl.ContentTemplate>
                <DataTemplate>
                    <ContentControl Content="{Binding Content}"></ContentControl>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>
    </Grid>
</Window>
